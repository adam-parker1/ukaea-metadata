{
	"$schema": "https://json-schema.org/draft/2020-12/schema", 
    "$id": "urn:ukaea:experiment-schema",
    "description": "UKAEA experiment metadata schema",
	"type": "object",
    "required": [
        "runLocation", "startTime", "endTime", "outputFiles"
    ],
    "properties": {
        "runLocation": {
            "type": "enum[string]",
            "description": "Culham, FTF, The Moon"
        },
        "startTime": {
            "type": "date-time",
            "description": ""
        },
        "endTime": {
            "type": "date-time",
            "description": ""
        },
        "outputFiles": {
            "type": "array[string]",
            "description": ""
        }
    }
}
